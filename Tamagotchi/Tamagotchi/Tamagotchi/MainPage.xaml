        <StackLayout Grid.Row="1" Grid.Column="0" Orientation="Vertical" BackgroundColor="AliceBlue">

            <CarouselView x:Name="carView_Actions" ItemsSource="{Binding PlayerActions}"
                  IndicatorView="indicatorView">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Vertical" BackgroundColor="LightPink">
                            <Label Text="{Binding ActionInfo}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="LightCyan" FontAttributes="Bold" FontSize="16" Margin="0,5,0,0"/>
                            <ImageButton x:Name="{Binding LinkedAction}" Source="{Binding ImageName}" HeightRequest="125" BackgroundColor="LightCyan" Clicked="btn_Clicked"/>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <IndicatorView x:Name="indicatorView" 
               IndicatorColor="Pink" 
               SelectedIndicatorColor="Cyan" 
               HorizontalOptions="Center" 
               IndicatorsShape="Square"     
               IndicatorSize="18"
               MaximumVisible="6" 
               Margin="0,0,0,25"/>

